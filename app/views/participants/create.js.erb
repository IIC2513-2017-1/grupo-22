<% if !(@result==nil) %>
	<% if !@result %>
		$(".participants").append('<%= j render "participant", team: @team %>');
		$("#participant_<%= @team.id %>").css({"background-color": "#FFD700"});
		$("#participant_<%= @team.id %>").hide().fadeIn(800, function(){
			$("#participant_<%= @team.id %>").css({"background-color": "#f6f6f6"});
		});
		$(".container-participants-form").html("<%= j render 'form' %>" );
		$("#noticia .notification").html("<%= flash[:notice] %>");
		$("#alerta .notification").html("");
		$("#mensaje .notification").html("");
	<% else %>
		$("#mensaje .notification").html("");
		$("#noticia .notification").html("");
		$("#alerta .notification").html("<%= flash[:alert] %>");
	<% end %>
<% else %>
	$("#noticia .notification").html("");
	$("#alerta .notification").html("");
	$("#mensaje .notification").html("<%= flash[:message] %>");
<% end %>
