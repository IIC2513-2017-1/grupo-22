<h1>Users</h1>
<br>
<table class="tabla">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Full name</th>
      <th>Email</th>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr data-link="<%= user_path(user)%>">
        <td><span class="icon-go2"></span></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <!--
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<div class="container" style="width: 45px; height: 45px;">
  <%= link_to image_tag("Back2.png", size: "45x45"), root_path, class: 'back' %>
  <div class="overlay">
    <div class="text"><%= link_to image_tag("Back.png", size: "45x45"), root_path, class: 'back' %></div>
  </div>
</div>
