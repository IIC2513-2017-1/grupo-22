<% if @result %>
	$("#noticia .notification").html("<%= flash[:notice] %>");
	$("#alerta .notification").html("");
	$("#mensaje .notification").html("");

	var modalBackground = $(".modal-background.sign-up");
	var containerModal = modalBackground.find(">:first-child");

	modalBackground.fadeOut(300);
	containerModal.css("transform", "scale(0.1)");
	$("#new_user").html( "<%= j render '/users/form', user: User.new %>")

<% else %>
	$("#new_user").html( "<%= j render '/users/form', user: @user %>")
	$("#alerta .notification").html("<% @user.errors.full_messages.each do |message| %><li><%= message %></li><% end %>");
	$("#noticia .notification").html("");
	$("#mensaje .notification").html("");
<% end %>
