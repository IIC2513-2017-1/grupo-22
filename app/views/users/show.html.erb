<h1>Profile</h1>
<br>
<div class="fotoperfil">
  <%= image_tag(@user.avatar.url(:medium), class:'fotomedium') %>
</div>
<br><br>
<table class="perfil">
  <tr>
    <td class="subject">Full Name:</td>
    <td class="value"><%=@user.full_name %></td>
  </tr>
  <tr>
    <td class="subject">Email:</td>
    <td class="value"><%=@user.email%></td>
  </tr>
  <tr>
    <td class="subject">Username:</td>
    <td class="value"><%=@user.username%></td>
  </tr>
  <tr>
    <td class="subject">Password:</td>
    <td class="value"><%=@user.password%></td>
  </tr>
</table>
<br>
<% if current_user %>
  <% if current_user.id == @user.id %>
  <div class="container" style="width: 45px; height: 45px; margin:0 auto;">
    <%= link_to image_tag("Edit.png", size: "45x45"), edit_user_path(@user), class: 'cruzedit' %>
    <div class="overlay2">
        <div class="text"><%= link_to "EDIT", edit_user_path(@user) %></div>
    </div>
  </div>
  <% end %>
<% end %>
<br>
<div class="container-flex">
  <div class="left" id="tabla">        
      <h1>Teams</h1>
      <br>
      <table class="tabla">
        <thead>
          <tr>
            <th>Name</th>
            <th>Trainer</th>
            <th>Foundation Date</th>
          </tr>
        </thead>
        <tbody>
          <% @user.teams.each do |team| %>
            <tr data-link="<%= team_path(team) %>">
              <td><%= team.name %></td>
              <td><%= team.trainer %></td>
              <td><%= team.foundation_date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <% if current_user and current_user.id? %>  
        <div class="container" style="width: 45px; height: 45px; margin: 0 auto;">
          <%= link_to image_tag("Add4.png", size: "45x45"), new_team_path, class: 'back' %>
          <div class="overlay">
            <div class="text"><%= link_to "ADD", new_team_path %></div>
          </div>
        </div>
      <% end %>
  </div>
  <div class="right" id="tabla">        
      <h1>Tourneys</h1>
      <br>
      <table class="tabla">
        <thead>
          <tr>
            <th>Name</th>
            <th>Trainer</th>
            <th>Foro</th>
          </tr>
        </thead>
        <tbody>
          <% @user.tourneys.each do |tourney| %>
            <tr data-link="<%= team_path(tourney) %>">
              <td><%= tourney.name %></td>
              <td><%= tourney.format %></td>
              <td><%= link_to 'Go', foro_path(tourney.foro) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
        <% if current_user and current_user.id? %>  
        <div class="container" style="width: 45px; height: 45px; margin: 0 auto;">
            <%= link_to image_tag("Add4.png", size: "45x45"), new_tourney_path, class: 'back' %>
            <div class="overlay">
              <div class="text"><%= link_to "ADD", new_tourney_path %></div>
            </div>
          </div>
        <% end %>
  </div>
</div>
<br>
<div class="container" style="width: 45px; height: 45px;">
  <%= link_to image_tag("Back2.png", size: "45x45"), users_path, class: 'back' %>
  <div class="overlay">
    <div class="text"><%= link_to image_tag("Back.png", size: "45x45"), users_path, class: 'back' %></div>
  </div>
</div>