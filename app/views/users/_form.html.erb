<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style=" margin: 0 auto; text-align: center;">
    <div class="field" style="text-align: center;">
      <%= f.text_field :full_name, required: true, placeholder:"Full name", autofocus: true %>
    </div>

    <div class="field" style="text-align: center;">
      <%= f.email_field :email, required: true, placeholder:"Email" %>
    </div>

    <div class="field" style="text-align: center;">
      <%= f.text_field :username, required: true, placeholder:"Username" %>
    </div>

    <div class="field" style="text-align: center;">
      <%= f.password_field :password, required: true, placeholder:"Password" %>
    </div>

    <div class="field" style="text-align: center;">
      <%= f.password_field :password_confirmation, required: true, placeholder:"Password confirmation" %>
    </div>

    <div class="field" style="text-align: center;"">
      <%= f.file_field :avatar, style:"width: 240px;" %>
    </div> 
    <br>
    <div class="actions" style="text-align: center;">
      <%= f.submit %>
    </div>
  </div>
<% end %>
