<table class="tabla container-users">
  <thead>
    <tr>
      <th><i class="fa fa-link"></i></th>
      <th>Picture</th>
      <th>Full name</th>
      <th>Username</th>
      <th>Email</th> 
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
     <%= render 'user', user: user %>
    <% end %>
  </tbody>
</table>
<br><br>
<%= link_to root_path do %>
  <div class="button-back">
    <span class="icon-back"></span>
  </div>
<% end %>