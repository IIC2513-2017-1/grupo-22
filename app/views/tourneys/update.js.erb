<% if @result %>
	$("#noticia .notification").html("<%= flash[:notice] %>");
	$("#alerta .notification").html("");
	$("#mensaje .notification").html("");
	$(".info-tourney").html( "<%= j render 'info_tourney' %>")

	var state = $(".state");
	var modalBackground = $(".modal-background.edit-tourney");
	var containerModal = modalBackground.find(">:first-child");
	var containerInfo = containerModal.find("div.edit-info-tourney");
	modalBackground.fadeOut(300);
	containerModal.css("transform", "scale(0.1)");
	state.html("<%= j render 'tourney_state', tourney: @tourney %>");

<% else %>
	containerInfo.html( "<%= j render '/tourneys/form_edit', tourney: @tourney %>")
	$("#alerta .notification").html("<% @tourney.errors.full_messages.each do |message| %><li><%= message %></li><% end %>");
	$("#noticia .notification").html("");
	$("#mensaje .notification").html("");
<% end %>
