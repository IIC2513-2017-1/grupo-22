  <h1>Teams</h1>
  <br>
  <table class="tabla participants" style="margin: auto;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Trainer</th>
        <th>Perfil</th>
        <% if current_user and current_user.id? %>
        <% if current_user.id == @tourney.user.id %>
          <th colspan="1"></th>
        <% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @tourney.teams.each do |team| %>
        <%= render 'participants/participant', team: team %> 
      <% end %>
    </tbody>
  </table>
