<h1>Tourneys</h1>
<br>
<table class="tabla">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Name</th>
      <th>City</th>
      <th>Format</th>
      <th>Ins. limit date</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Owner</th>
      <th>Phone</th>
      <th>email</th>
    </tr>
  </thead>

  <tbody>
    <% @tourneys.each do |tourney| %>
      <tr data-link="<%= tourney_path(tourney) %>">
        <td><span class="icon-go2"></span></td>
        <td><%= tourney.name %></td>
        <td><%= tourney.city %></td>
        <td><%= tourney.format %></td>
        <td><%= tourney.inscription_limit_date %></td>
        <td><%= tourney.start_date %></td>
        <td><%= tourney.end_date %></td>
        <td><%= tourney.user.username %></td>
        <td><%= tourney.phone %></td>
        <td><%= tourney.mail%></td>
      </tr>
    <% end %>
  </tbody>
</table>
