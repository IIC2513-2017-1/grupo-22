<h1>Tourneys</h1>
<br>
<table class="tabla">
  <thead>
    <tr>
      <th><i class="fa fa-link"></i></th>
      <th>Name</th>
      <th>City</th>
      <th>Format</th>
      <th>State</th>
      <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @tourneys.each do |tourney| %>
      <tr data-link="<%= tourney_path(tourney) %>">
        <td><span class="icon-go2"></span></td>
        <td><%= tourney.name %></td>
        <td><%= tourney.city %></td>
        <td><%= tourney.format %></td>
        <% if tourney.state() =="Inscription State" %>
          <td class="inscription"><%= tourney.state() %></td>
        <% elsif tourney.state() == "In Develop" %>
          <td class="develop"><%= tourney.state() %></td>
        <% elsif tourney.state() == "Finished" %>
          <td class="ended"><%= tourney.state() %></td>
        <% else tourney.state() =="About to start" %>
          <td class="about-start"><%= tourney.state() %></td>
        <% end %>        
        <td><%= tourney.user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
