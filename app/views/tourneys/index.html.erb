<p id="notice"><%= notice %></p>

<h1 style="color: #FFD700;font-weight: bolder;">Tourneys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Format</th>
      <th>Location</th>
      <th>Inscription limit date</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Owner</th>
      <th>Schedule</th>
      <th>Awards</th>
      <th>Price</th>
      <th>Phone</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tourneys.each do |tourney| %>
      <tr>
        <td><%= tourney.name %></td>
        <td><%= tourney.description %></td>
        <td><%= tourney.format %></td>
        <td><%= tourney.location %></td>
        <td><%= tourney.inscription_limit_date %></td>
        <td><%= tourney.start_date %></td>
        <td><%= tourney.end_date %></td>
        <td><%= tourney.user_id %></td>
	      <td><%= tourney.schedule %></td>
        <td><%= tourney.prize%></td>
        <td><%= tourney.price %></td>
        <td><%= tourney.phone %></td>
        <td><%= tourney.mail%></td>
        <td><%= link_to 'Foro', foro_path(tourney) %></td>
        <td><%= link_to 'Show', tourney %></td>
        <td><%= link_to 'Edit', edit_tourney_path(tourney) %></td>
        <td><%= link_to 'Destroy', tourney, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tourney', new_tourney_path %> |
<div class="container" style="width: 45px; height: 45px;">
  <%= link_to image_tag("Back2.png", size: "45x45"), root_path, class: 'back' %>
  <div class="overlay">
    <div class="text"><%= link_to image_tag("Back.png", size: "45x45"), root_path, class: 'back' %></div>
  </div>
</div>
