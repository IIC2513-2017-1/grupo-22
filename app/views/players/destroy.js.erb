<% if @result %>
	$("#player_<%= @player.id %>").css({"color": "#FDD700" });
	$("#noticia .notification").html("");
	$("#alerta .notification").html("");
	$("#mensaje .notification").html("<%= flash[:message] %>");
	$("#player_<%= @player.id %>").fadeOut(800, function(){
		$("#player_<%= @player.id %>").remove();
	});
<% else  %>
	$("#player_<%= @player.id %>").css({"color": "red" });
	$("#player_<%= @player.id %> td.value#cell-link a").css({"color": "red" });
	$("#alerta .notification").html("<%= flash[:alert] %>");
	$("#noticia .notification").html("");
	$("#mensaje .notification").html("");
	setTimeout(
  function() 
  {
    $("#player_<%= @player.id %>").css({"color": "inherit"});
    $("#player_<%= @player.id %> td.value#cell-link a").css({"color": "inherit" });
  }, 800);
<% end %>