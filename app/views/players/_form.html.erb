<% @team = Team.find(params[:team_id]) %>

<%= form_for ([@team, @team.players.build]) do |f| %>

  <p>
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name, required: true %>
  </p>

  <p>
    <%= f.label :position %><br>
    <%= f.text_field :position, required: true % %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true % %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date %>
  </p>

  <p>
    <%= f.label :ocupation %><br>
    <%= f.text_field :ocupation, required: true % %>
  </p>

  <p>
    <%= f.label :phote %><br>
    <%= f.text_field :phote, required: true % %>
  </p>

  <p>
    <%= f.label :leg %><br>
    <%= f.text_field :leg %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
