<h1>Info</h1>
<br>
<div class="info-player">
  <%= render "info_player" %>
</div>
<br>
<% if current_user %>
  <% if current_user.id == @player.team.user.id %>
    <%= link_to(edit_team_player_path) do %>
      <div class="button-current edit centered"><span class=icon-pencil2></span></div>
    <% end %>
  <% end %>
<% end %>
<%= link_to team_path(@player.team) do %>
  <div class="button-back">
    <span class="icon-back"></span>
  </div>
<% end %>
