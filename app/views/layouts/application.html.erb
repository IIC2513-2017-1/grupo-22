<!DOCTYPE html>
<html>
  <head>
    <title>CreaTuLiga</title>
	<%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <div id="user-bar">
        <% if current_user %>
          <div class="name">Welcome, <%= current_user.username %></div>
          <%= link_to 'Logout', session_path, method: :delete, class: 'buttonl'%>
        <% else %>
          <%= link_to 'Login', new_session_path, class: 'buttonl' %>
        <% end %>
	 </div>
  </head>

  <body>
     <header>
      <div id="logo">
        <%= link_to image_tag("Pelota.png", size: "300x300"), root_path, class: 'logo1' %>    
	  <div id=titulo>
	  	   <%= link_to 'CreaTuLiga', root_path, class: 'buttont' %>
	  </div>
	  <p></p>
      <nav id="main-menu">
        <%= link_to 'Users', users_path, class: 'button' %>
        <%= link_to 'Teams', teams_path, class: 'button' %>
        <%= link_to 'Tourneys', tourneys_path, class: 'button' %>
      </nav>
    </header>
    <main>
      <% [:alert, :notice].each do |flash_type| %>
        <% if (flash_message = flash[flash_type]).present? %>
          <div class="<%= flash_type %>"><%= flash_message %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <hr>
      <div id="project">Â© CreaTuLiga 2017</div>
    </footer>
</body>

</html>
