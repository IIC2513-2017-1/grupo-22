<h1 style="color: #FFD700;font-weight: bolder;"> Foro </h1>

<p>
  <strong>Title:</strong>
  <%= @foro.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @foro.description %>
</p>
<p>
	<h1 style="color: #FFD700;font-weight: bolder;">Topics</h1>
	<% @foro.topics.each do |t| %>
	<p>
	<strong>Titulo:</strong>
	<%= link_to t.title, [t.foro,t] %>
	</p>

	<p>
	<strong>Description:</strong>
	<%= t.content %>
	</p>
	<table>
		<tr>
			<td style="padding-right:100px;">
				<i style="color: gray;">
				Created by <%= t.user.username %>
				</i>
			</td>
			<% if current_user.id %>
				<% if current_user.id == t.user.id %>		
					<td>
					<div class="container">
						<%= image_tag("Cruz.png", size: "45x45", class: 'cruzedit') %>
  						<div class="overlay">
    						<div class="text"><%= link_to "Delete", topic_path(t), method: :delete, data: { confirm: 'Are you sure?' } %></div>
  						</div>
					</div>
					</td>
					<td>
					<div class="container">
  						<%= image_tag("Edit.png", size: "45x45", class: 'cruzedit') %>
  						<div class="overlay">
    						<div class="text"><%= link_to "Edit", edit_topic_path(t) %></div>
  						</div>
					</div>
					</td>
				<% end %>
			<% end %>
		</tr>
	</table>
	<hr>
	<% end %>
</p>
<p>
<% if current_user %>
	<h1>Create topic as  <%= current_user.username %></h1>
	<%= form_for([@foro, @foro.topics.build]) do |f| %>
	 <p>
	    <%= f.text_field :title, placeholder:"Tittle" %>
	  </p>
	  <p>
	    <%= f.text_area :content, placeholder:"Content" %>
	  </p>
	  <p>
	    <%= f.submit "Create" , class: "submit", id: 'submit'%>
	  </p>
	<% end %>
<% end %>
</p>

<%= link_to 'Back', tourneys_path %>