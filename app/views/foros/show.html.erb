<div class="container-flex">
	<div class="left">
		<h1> Forum </h1>
		<p>
		  <strong>Title:</strong>
		  <%= @foro.title %>
		</p>
		<p>
		  <strong>Description:</strong>
		  <%= @foro.description %>
		</p>
			<h1>Topics</h1>
			<div class="container-topics scroll" id="scroll">
  		<%= render @topics %>
  	</div>
	</div>
</div>
<% if current_user and current_user.id? %>
	<div class="ventana-movil">
		<%= render '/topics/form' %>
	</div>
<% end %>
<br>
<%= link_to foros_path do %>
	<div class="button-back">
		<span class="icon-back"></span>
	</div>
<% end %>

<!-- Edit Topic -->
<div class="modal-background edit-topic">
  <div class="container-edit-topic">
    <div class="close">
      <span class=icon-delete></span>
    </div>
    <div class="edit-info-topic">
    </div>
    <br>
  </div>
</div>
