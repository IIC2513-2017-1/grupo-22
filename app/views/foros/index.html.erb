<h1> Forums </h1>
<div class='lista'>
  <ol>
    <% @foros.each do |f| %>
      <li>
      <%= link_to foro_path(f) do%>
        <%= f.title %>
        <i class="fa fa-link" style="float: right; margin-right: 5px;"></i>
        <% end %>
      </li>
    <% end %>
  </ol>
</div> 
<br>
<%= link_to root_path do %>
	<div class="button-back">
		<span class="icon-back"></span>
	</div>
<% end %>