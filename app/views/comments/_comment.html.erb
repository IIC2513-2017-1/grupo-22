<div class="comment" id="comment_<%= comment.id %>">
  <p>
    <%= comment.content %>
  </p>
  <div class="container-flex" style="line-height: 45px">
    <div class="creator left-big">
    	Published by <%= comment.user.username %> <%= time_ago_in_words(comment.created_at) %> <span> ago</span>
  	</div>
  	<% if current_user %>
    	<% if current_user.id == comment.user.id %>
        <div class="right-small">
      		<%= link_to(edit_topic_comment_path(comment.topic,comment)) do %>
          	<div class="button-current edit"><span class=icon-pencil2></span></div>
          <% end %>
          <%= link_to(topic_comment_path(comment.topic,comment), method: :delete, data: { confirm: 'Are you sure?' }, remote: true) do %>
          	<div class="button-current delete"><span class=icon-trash></span></div>
          <% end %>
        </div>
  		<% end %>
  	<% end %>
  </div>
</div>