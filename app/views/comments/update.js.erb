setTimeout(function(){
  $("#comment_<%= @comment.id %>").css({"border-color": "gray"});
	$("#comment_<%= @comment.id %> p").css({"color": "#FFF"});
	$("#comment_<%= @comment.id %> .creator.left-big").css({"color": "gray"});
}, 800);

