var modalBackground = $(".modal-background.edit-comment");

var containerModal = modalBackground.find(">:first-child");

modalBackground.fadeOut(300);
containerModal.css("transform", "scale(0.1)");

$("#comment_<%= @comment.id %>").replaceWith("<%= j render 'comment', comment:@comment %>")
$("#comment_<%= @comment.id %>").css({"border-color": "#FFD700"});
$("#comment_<%= @comment.id %> p").css({"color": "#FFD700"});
