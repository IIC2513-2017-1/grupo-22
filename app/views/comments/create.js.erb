$(".ventana-movil").html("<%= j render 'form' %>",);
$(".container-comments").append('<%= j render @comment %>');
$("#comment_<%= @comment.id %>").css({"border-color": "#FFD700"});
$("#comment_<%= @comment.id %> p").css({"color": "#FFD700"});
$("#comment_<%= @comment.id %> .creator.left-big").css({"color": "#FFD700"});
$("#comment_<%= @comment.id %>").hide().fadeIn(800, function(){
	$("#comment_<%= @comment.id %>").css("border-color", "gray");
	$("#comment_<%= @comment.id %> p").css({"color": "white"});
  $("#comment_<%= @comment.id %> .creator.left-big").css({"color": "gray"});
});
$("#noticia .notification").html("<%= flash[:notice] %>");
$("#alerta .notification").html("");
$("#mensaje .notification").html("");
$("#scroll").scrollTop($("#scroll")[0].scrollHeight);

