<div class="comment">
  <p>
    <%= comment.content %>
  </p>
  <div class="creator">
  	Published by <%= comment.user.username %>
	</div>
	<% if current_user %>
  	<% if current_user.id == comment.user.id %>
  		<%= link_to(edit_topic_comment_path(comment.topic,comment)) do %>
      	<div class="button-current edit"><span class=icon-pencil2></span></div>
      <% end %>
      <%= link_to(topic_comment_path(comment.topic,comment), method: :delete, data: { confirm: 'Are you sure?' }) do %>
      	<div class="button-current delete"><span class=icon-trash></span></div>
      <% end %>
		<% end %>
	<% end %>
</div>