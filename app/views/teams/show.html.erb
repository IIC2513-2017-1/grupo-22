  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.players.each do |player| %>
      <tr data-link="<%= team_player_path(@team, player)%>">
        <td><%= player.id %></td>
        <td><%= player.full_name %></td>
        <td><%= link_to 'Show', [player.team, player] %></td>
        <td><%= link_to 'Edit', [:edit, player.team, player] %></td>
        <td><%= link_to 'Destroy', [player.team, player], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
