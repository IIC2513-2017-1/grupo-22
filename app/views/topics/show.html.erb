<h1 style="color: #FFD700;font-weight: bolder;"> Topic </h1>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.content %>
</p>
<h1 style="color: #FFD700;font-weight: bolder;">Comments</h1>
<hr>

<% @topic.comments.each do |c| %>
  <p>
    <%= c.content %>
  </p>
 
  <i style="color: gray;">
    Published by <%= c.user.username %>
  </i>
  <hr>
<% end %>
</p>
<p>
	<% if current_user %>
		<h1 style="color: #FFD700; font-weight: bolder;"">Create comment as <%= current_user.username %></h1>
		<%= form_for([@topic, @topic.comments.build]) do |c| %>
		  <p>
		    <%= c.text_area :content, placeholder:"Content" %>
		  </p>
		  <p>
		    <%= c.submit %>
		  </p>
		<% end %>
	<% end %>
</p>


<%= link_to 'Back', foro_path(@topic.foro) %>