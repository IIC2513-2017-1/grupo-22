<h1 style="color: #FFD700;font-weight: bolder;"> Topic </h1>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.content %>
</p>
<h1>Comments</h1>
<hr>

<% @topic.comments.each do |c| %>
  <p>
    <%= c.content %>
  </p>
 
  <i style="color: gray;">
    Published by <%= c.user.username %>
  </i>
  <hr>
<% end %>
</p>
<p>
	<% if current_user %>
		<h1>Create comment as <%= current_user.username %></h1>
		<%= form_for([@topic, @topic.comments.build]) do |c| %>
		  <p style="text-align: center;">
		    <%= c.text_area :content, placeholder:"Content" %>
		  </p>
		  <p style="text-align: center;">
		    <%= c.submit "Comment"%>
		  </p>
		<% end %>
	<% end %>
</p>


<div class="container" style="width: 45px; height: 45px;">
	<%= link_to image_tag("Back2.png", size: "45x45"), :back, class: 'back' %>
	<div class="overlay">
		<div class="text"><%= link_to image_tag("Back.png", size: "45x45"), :back, class: 'back' %></div>
	</div>
</div>