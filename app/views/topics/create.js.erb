$(".container-topics").append('<%= j render @topic %>');
$("#topic_<%= @topic.id %>").css({"border-color": "#FFD700"});
$("#topic_<%= @topic.id %> p").css({"color": "#FFD700"});
$("#topic_<%= @topic.id %> .creator.left-big").css({"color": "#FFD700"});
$("#topic_<%= @topic.id %>").hide().fadeIn(800, function(){
	$("#topic_<%= @topic.id %>").css("border-color", "gray");
	$("#topic_<%= @topic.id %> .creator.left-big").css("color", "gray");
	$("#topic_<%= @topic.id %> p").css({"color": "white"});

});
$("#noticia .notification").html("<%= flash[:notice] %>");
$("#alerta .notification").html("");
$("#mensaje .notification").html("");
$("#scroll").scrollTop($("#scroll")[0].scrollHeight);